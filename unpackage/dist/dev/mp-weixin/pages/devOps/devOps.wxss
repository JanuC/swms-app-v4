.wrap {
  height: 100vh;
  overflow: hidden;
}
.wrap .content {
  margin-top: 15rpx;
  background-color: #FFFFFF;
  overflow: hidden;
}
.wrap .content .search-bar {
  position: relative;
  z-index: 9;
}
.wrap .content .search-bar .placeholder {
  margin-left: 27rpx;
  font-size: 28rpx;
  color: #959aa0;
}
.organ-content {
  width: 100%;
  border-top: solid 1rpx #e5e5e5;
  position: absolute;
  top: calc(25px + 220rpx);
  bottom: 0;
  background-color: #FFFFFF;
  margin-bottom: 152rpx;
}
.organ-content .organ-item {
  margin-left: 30rpx;
  border-bottom: solid 1px #e5e5e5;
}
.organ-content .organ-item .organ-name {
  font-size: 34rpx;
  color: #000000;
}
.organ-content .organ-item .organ-name__text {
  margin-right: 15rpx;
}
.organ-content .organ-item__content {
  height: 95rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 30rpx;
}
.organ-content .organ-item__content .right-operate {
  height: 100%;
  display: flex;
  align-items: center;
}
.organ-content .organ-item__content .right-operate .photo-num-show {
  display: flex;
  align-items: center;
}
.organ-content .organ-item__content .right-operate .photo-num {
  font-size: 26rpx;
  color: #878787;
  margin-right: 10rpx;
}
.organ-content .organ-item__content .right-operate .down-image {
  -webkit-transform: rotate(90deg);
          transform: rotate(90deg);
}
.organ-content .photo-content {
  display: flex;
  align-items: center;
  height: 0;
  overflow: hidden;
  transition: all 0.3s;
}
.organ-content .photo-content__unfold {
  height: auto;
  margin: 20rpx 0;
  transition: all 0.3s;
}
.popup-wrap {
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 10rpx 10rpx 0 0;
}
.popup-wrap .popup-button {
  height: 114rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #e5e5e5;
}
.popup-wrap .popup-photograph {
  flex-direction: column;
}
.popup-wrap .popup-cancel {
  border-bottom: none;
  border-top: 16rpx solid #f2f4f5;
}
.popup-wrap .popup-title {
  font-size: 36rpx;
  color: #333333;
}
.popup-wrap .popup-tips {
  font-size: 24rpx;
  color: #999999;
}
.no-data {
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999999;
}

