.login-content {
  height: 100%;
  overflow: hidden;
  background-color: #FFFFFF;
}
.logo-content {
  text-align: center;
  margin-top: 186rpx;
  margin-bottom: 30rpx;
}
.logo-content .logo {
  width: 200rpx;
  height: 200rpx;
}
.logo-title {
  text-align: center;
  margin-bottom: 232rpx;
}
.logo-title .primary-title {
  font-size: 40rpx;
  color: #060606;
  margin-bottom: 20rpx;
}
.logo-title .explain {
  font-size: 28rpx;
  letter-spacing: 20rpx;
  color: #9e9e9e;
}
.logo-form {
  border-top: 1rpx solid #F5F5F5;
}
.logo-form .input-wrapper {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  border-bottom: 1rpx solid #F5F5F5;
  position: relative;
}
.logo-form .input-wrapper .input-title {
  font-size: 34rpx;
  color: #333333;
}
.logo-form .input-wrapper .input {
  height: 94rpx;
  margin-left: 129rpx;
}
.logo-form .checkbox-wrapper {
  padding: 30rpx 30rpx 0 20rpx;
  font-size: 28rpx;
  color: #b2b2b2;
  margin-bottom: 99rpx;
}
.input-placeholder {
  font-size: 34rpx;
  color: #cccccc;
}

